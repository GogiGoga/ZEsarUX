	\$(CC) \$(CFLAGS) -c joystick.c

ula.o: ula.c ula.h cpu.h debug.h screen.h contend.h menu.h multiface.h
	\$(CC) \$(CFLAGS) -c ula.c

mmc.o: mmc.c mmc.h cpu.h debug.h utils.h menu.h screen.h divmmc.h
	\$(CC) \$(CFLAGS) -c mmc.c

